{
  "compilerOptions": {
    "outDir": "./dist",
    "target": "es2017",
    "lib": ["es2017", "dom"],
    "experimentalDecorators": true,
    "declaration": true,
    "declarationMap": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "removeComments": false,
    "baseUrl": ".",
    "importHelpers": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true
  },
  "exclude": ["**/node_modules", "**/dist"],
  "include": ["./src"]
}
